    <!-- About -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Here you can view my portfolio, all the work I've done and know all about me.</h2>
                     <p class="lead">About me -  <%= link_to("Click Here",about_path) %></p>
                </div>
            </div>
