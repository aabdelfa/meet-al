        </div>
        <!-- /.container -->
    </section>
<div
  class="fb-like"
  data-share="true"
  data-width="450"
  data-show-faces="true">
</div>
    <!-- Services -->
    <!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
    <section id="services" class="services bg-primary">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-10 col-lg-offset-1">
                    <h2>My Projects with...</h2>
                    <hr class="small">
                    <div class="row">
                        <% @languages.each do |language| %>
                        <div class="col-md-3 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="<%= language.icon %> fa-stack-1x text-primary"></i>
                                </span>
                                <h4>
                                    <strong><%= language.name %></strong>
                                </h4>
                                <p><%= language.content_type %></p>
                                <a data-toggle="modal" data-target="#id<%= language.id %>" class="btn btn-light">Learn More</a>
                            </div>
                        </div>
                        <div id="id<%= language.id %>" class="modal fade" role="dialog">
                          <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title text-primary">Project(s) created with <%= language.name %></h4>
                              </div>
                              <div class="modal-body" style="color: #191919;">
                                <%= language.content.html_safe %>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              </div>
                            </div>

                          </div>
                        </div>

                        <% end %>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>

    <!-- Callout -->
    <aside class="callout">
        <div class="text-vertical-center">
            <h1>Quick facts about Al</h1>
            <div class="col-md-4"></div>
            <div class="col-md-6">
               <ul class="text-left">
                  <li><h3>Went to college at the age of 16.</h3></li>
                  <li><h3>Graduated high school from Cambridge University.</h3></li>
                  <li><h3>Played soccer professionally.</h3></li>
                  <li><h3>Collects old and rare coins.</h3></li>
                  <li><h3>Moved to the United States by himself 5 years ago.</h3></li>
               </ul>
            </div> 
        </div>
    </aside>

    <!-- Portfolio -->
    <section id="portfolio" class="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <h2>My Work</h2>
                    <hr class="small">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="portfolio-item">
                                <a href="#">
                                   <%= link_to image_tag("portfolio-1.jpg") %>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="portfolio-item">
                                <a href="#">
                                   <%= link_to image_tag("portfolio-2.jpg") %>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="portfolio-item">
                                <a href="#">
                                   <%= link_to image_tag("portfolio-3.jpg") %>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="portfolio-item">
                                <a href="#">
                                   <%= link_to image_tag("portfolio-4.jpg") %>
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                    <a href="#" class="btn btn-dark">View More Items</a>
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>

    <!-- Call to Action -->
    <aside class="call-to-action bg-primary">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3>If you like my work and would like to checkout my services</h3>
                    <%= link_to("Click Here!",services_path, class: 'btn btn-lg btn-light') %>
                    <a href="#contact" class="btn btn-lg btn-dark">Contact directly!</a>
                </div>
            </div>
        </div>
    </aside>
