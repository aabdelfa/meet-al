<p class="navbar-text pull-right">
<% if admin_signed_in? %>
<div class="pull-left">
  <span> Welcome, <strong><%= current_admin.username %></strong>.</span>
  <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link' %>
</div>
<br>
<% provide(:title, "Edit Language") %>
<h1>Edit coding language information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@language) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.label :position %>
      <%= f.text_field :position, disabled: true, class: 'form-control' %>
      <br>
      <%= f.label :content_type %>
      <%= f.text_field :content_type, class: 'form-control' %>
      <br>
      <%= f.label :content %>
      <%= f.text_area :content, class: 'summernote', id: 'summernote' %>
      <br>
      <%= f.label :icon %>
      <%= f.text_field :icon, class: 'form-control' %>
      <br>
      <%= f.label :visible %>
      <%= f.check_box :visible, class: 'checkbox-default' %>
      <br><br>
      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
<% end %>